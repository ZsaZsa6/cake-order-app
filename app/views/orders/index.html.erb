
<h3><%= "#{current_customer.username} Select the order you would like to view" %></h3>
<% @orders.each do | order | %>
Order Description: <%= order.description %><br>


<% order.cakes.each do | cake | %>
    Cake Title: <%= cake.title %><br>
    Number of Tiers: <%= cake.number_tiers %><br>
    

<%= link_to "See more about this order", order_cake_path(order, cake) %><br>



<br><%= link_to "Create a new order", new_customer_order_path(current_customer) %><br>
<br><%= link_to "Delete this order", destroy_order_path(@order), method: :delete %><br>
<%= link_to "Logout", logout_path, method: :delete %><br>
<% end %>
<% end %>
