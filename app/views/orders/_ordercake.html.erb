<%= form_for :order do |f| %>
    <%= f.label "Description of order: " %><br>
    e.g. Carla's bridal and groom's cake
    <br><%= f.text_area :description%><br><br>
    <%= f.hidden_field (:customer_id) %><br>
    
        
    <%= form_for :cake do |c| %>
      <%= c.label "Title of cake:" %><br>
      e.g. Bridal Cake
     <br><%= c.text_field :title %><br>
      <br><%= c.label "Number of tiers on cake:" %><br>
      <br><%= c.number_field :number_tiers, in: 1...10 %><br>
      
            
    <% end %>
    <%= link_to "Create order", new_order_path(@order) %> 
    <% end %>