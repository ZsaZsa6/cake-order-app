<h1> New order </h2>
<h3> Please make a detailed description for your order. </h3>
<%= form_for @order do |f| %>
    <%= f.label :description %>
    <%= f.text_field :description%><br><br>
    <%= f.hidden_field (:customer_id) %>
    <%= f.hidden_field :order_id, :value => @order.id %>
    <%= f.submit %>
    <% end %>


    

 
    

