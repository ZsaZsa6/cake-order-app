<%= form_with model: @product do |f| %>
   

<%= f.fields_for :donuts do |donut_attributes|%>
    <br>
    <br>

    <%= donut_attributes.label "Tier Flavor" %>
    <%= donut_attributes.select(:flavor, ['Chocolate', 'Vanilla', 'Strawberry', 'Maple']) %><br>
    <%= donut_attributes.label "Frosting" %> 
    <%= donut_attributes.select(:frosting, ['Chocolate', 'Vanilla', 'Cream Cheese', 'Maple']) %><br>
    <%= donut_attributes.label "Filling" %>
    <%= donut_attributes.select(:filling, ['Chocolate', 'Vanilla Cream', 'Cream Cheese', 'Maple', 'Cookies n Cream', 'Strawberries & Cream']) %><br>
    <%= donut_attributes.label "Sprinkles"%>
    <%= donut_attributes.sprinkles :size, in: 4...21, step: 2 %><br>
    <% end %>
    <%= button_to "Create Tiers", tiers_path, method: :post %>
    <% end %>
    <br>
    <br>

 <%= render 'shared/links' %